<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.everygamer.dao.OrderListDao">
    <resultMap id="OrderItem" type="com.everygamer.bean.OrderItem">
        <id property="id" column="id"/>
        <result property="orderNum" column="order_num"/>
        <result property="userName" column="user_name"/>
        <result property="userWW" column="userww"/>
        <result property="tel" column="tel"/>
        <result property="phone" column="phone"/>
        <result property="address" column="address"/>
        <result property="itemList" column="item_list"/>
        <result property="logisticsType" column="logistics_type"/>
        <result property="logistics" column="logistics"/>
        <result property="logisticsNum" column="logistics_num"/>
        <result property="transCost" column="trans_cost"/>
        <result property="desc" column="desc"/>
        <result property="orderState" column="order_state"/>
        <result property="isAlive" column="is_alive"/>
        <result property="insDate" column="ins_date"/>
        <result property="delDate" column="del_date"/>
        <result property="upDate" column="up_date"/>
    </resultMap>
    <insert id="addOrder" parameterType="com.everygamer.bean.OrderItem" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id">
        INSERT INTO order_list (order_num, user_name, userww, tel, phone, address, logistics_type, logistics, logistics_num, trans_cost, "desc", order_state, ins_date)
        VALUES (#{orderNum}, #{userName}, #{userWW}, #{tel}, #{phone}, #{address}, #{logisticsType},
                             #{logistics},
                             #{logisticsNum}, #{transCost}, #{desc}, #{orderState}, UNIX_TIMESTAMP())
    </insert>
    <select id="getOrderById" resultType="com.everygamer.bean.OrderItem" resultMap="OrderItem">
        SELECT *
        FROM order_list
        WHERE id = #{param1} AND is_alive = 1
    </select>
    <select id="listOrder" resultType="com.everygamer.bean.OrderItem">
        SELECT *
        FROM order_list
        WHERE is_alive=1
        <choose>
            <when test="startTime!=null and endTime!=null">
                AND ins_date BETWEEN #{startTime} AND #{endTime}
            </when>
            <otherwise>
                <choose>
                    <when test="startTime!=null">
                        AND ins_date &gt;= #{startTime}
                    </when>
                    <otherwise>
                        <choose>
                            <when test="endTime!=null">
                                AND ins_date &lt;= #{endTime}
                            </when>
                        </choose>
                    </otherwise>
                </choose>
            </otherwise>
        </choose>
        <if test="state!=null">
            AND order_state=#{state}
        </if>
        <if test="userName!=null">
            AND user_name ILIKE #{userName}
        </if>
        <if test="phone!=null">
            AND phone=#{phone}
        </if>
        ORDER BY ins_date
    </select>
</mapper>